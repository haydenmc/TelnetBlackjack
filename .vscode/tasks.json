{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "bin/Blackjack.exe",
                "/Fd:",
                "bin/",
                "/Fo:",
                "obj/",
                "main.cpp",
                "Card.cpp",
                "Deck.cpp",
                "Game.cpp",
                "Server.cpp"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}